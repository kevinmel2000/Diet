<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muasmakkode.diet.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/Rl_utama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_judulhalamanFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/hello_blank_fragment"
            android:textSize="40sp" />

        <ProgressBar
            android:id="@+id/progresBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="332dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView_judulhalamanFragment"
            android:layout_margin="20dp"
            android:maxHeight="40dp"
            android:progressDrawable="@drawable/myprogressbar" />

        <TextView
            android:id="@+id/textView_totalkalori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/progresBar"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="progress"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/textView_kalorimasuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progresBar"
            android:paddingLeft="20dp"
            android:text="Kalori masuk"
            android:textIsSelectable="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_detail_kalorimasuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progresBar"
            android:paddingLeft="70dp"
            android:layout_toRightOf="@id/textView_kalorimasuk"
            android:text="0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_kalorikeluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_kalorimasuk"
            android:paddingLeft="20dp"
            android:text="Kalori dibakar"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_detail_kalorikeluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_detail_kalorimasuk"
            android:paddingLeft="70dp"
            android:layout_toRightOf="@id/textView_kalorimasuk"
            android:text="0"
            android:textSize="20sp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Li_utama"
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/frame_sarapan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </FrameLayout>

    </LinearLayout>


</FrameLayout>
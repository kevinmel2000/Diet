<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muasmakkode.diet.UI.DetailMakanan">

    <TextView
        android:id="@+id/textView_detail_nama_makanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nama makanan"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="27dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kalori :"
        android:layout_marginLeft="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="27dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="281dp" />

    <TextView
        android:id="@+id/textView_detail_kalori_makanan"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="kalori"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="281dp"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="66dp"
        android:layout_height="18dp"
        android:text="Karbohidrat :"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="27dp" />

    <TextView
        android:id="@+id/textView_detail_karbohidrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="17dp"
        android:text="karb"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_kalori_makanan" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="39dp"
        android:text="Protein :"
        app:layout_constraintLeft_toRightOf="@+id/textView_detail_kalori_makanan"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="281dp"
        android:layout_marginStart="38dp" />

    <TextView
        android:id="@+id/textView_detail_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="281dp"
        android:text="pro"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lemak :"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginLeft="211dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="211dp" />

    <TextView
        android:id="@+id/textView_detail_lemak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="316dp"
        android:text="lmk"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Takaran saji"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="146dp"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_view_ukuran_saji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ukuran saji"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="158dp"
        android:layout_marginLeft="185dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editText_jumlah_takaran"
        android:layout_width="66dp"
        android:layout_height="47dp"
        android:layout_marginTop="135dp"
        android:ems="10"
        android:maxLength="2"
        android:hint="jumlah"
        android:inputType="number"
        android:digits="0123456789."
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="278dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_cek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/editText_jumlah_takaran"
        tools:layout_editor_absoluteX="252dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="35dp"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


</android.support.constraint.ConstraintLayout>

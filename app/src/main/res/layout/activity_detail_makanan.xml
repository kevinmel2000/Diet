<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muasmakkode.diet.UI.DetailMakanan">


    <TextView
        android:id="@+id/textView_detail_nama_makanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nama makanan"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="27dp" />

    <TextView
        android:id="@+id/textView_detail_jenis_makanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="jumlah kalori"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_nama_makanan"
        tools:layout_editor_absoluteX="27dp" />

    <TextView
        android:id="@+id/textView_detail_kalori_makanan"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:text="kalori"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_jenis_makanan"
        tools:layout_editor_absoluteX="27dp" />
</android.support.constraint.ConstraintLayout>

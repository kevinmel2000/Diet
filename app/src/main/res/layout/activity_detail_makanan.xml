<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muasmakkode.diet.UI.DetailMakanan">

    <TextView
        android:id="@+id/textView_detail_nama_makanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nama makanan"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="27dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="kalori :"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_nama_makanan"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="27dp" />

    <TextView
        android:id="@+id/textView_detail_kalori_makanan"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="kalori"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="69dp"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="66dp"
        android:layout_height="18dp"
        android:text="Karbohidrat :"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="27dp" />

    <TextView
        android:id="@+id/textView_detail_karbohidrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="16dp"
        android:text="karb"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_kalori_makanan" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:text="Protein :"
        app:layout_constraintLeft_toRightOf="@+id/textView_detail_kalori_makanan"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="69dp"
        android:layout_marginStart="38dp" />

    <TextView
        android:id="@+id/textView_detail_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="69dp"
        android:text="pro"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lemak :"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginLeft="211dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="211dp" />

    <TextView
        android:id="@+id/textView_detail_lemak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="100dp"
        android:text="lmk"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="77dp"
        android:layout_height="40dp"
        android:layout_marginLeft="27dp"
        android:ems="10"
        android:hint="banyak"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="164dp"
        android:layout_marginStart="27dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    </Spinner>


</android.support.constraint.ConstraintLayout>
